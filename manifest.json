{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "2.0.0",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
